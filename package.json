{
    "name": "perfect-pixel",
    "version": "0.1.0",
    "description": "",
    "private": true,
    "main": "build/main.js",
    "homepage": "./",
    "scripts": {
        "start": "react-scripts-ts start",
        "compile:react": "GENERATE_SOURCEMAP=false react-scripts-ts build",
        "compile:electron": "tsc ./src/electron/** --outDir ./build",
        "start:electron": "yarn compile:react && yarn compile:electron && electron ./build/main.js",
        "build:mac": "electron-builder --mac",
		"build:win": "electron-builder --win --x64 --ia32",
		"build:lin": "electron-builder --linux",
        "test": "react-scripts-ts test --env=jsdom",
        "eject": "react-scripts-ts eject"
    },
    "dependencies": {
        "@rematch/core": "^1.4.0",
        "connected-react-router": "^6.8.0",
        "electron-is-dev": "^1.2.0",
        "react": "^16.8.3",
        "react-dom": "^16.8.3",
        "react-redux": "^7.2.1",
        "react-router": "^5.1.2",
        "react-router-dom": "^5.1.2",
        "react-scripts-scss-ts": "2.17.1",
        "redux": "^4.0.1"
    },
    "devDependencies": {
        "@bem-react/classname": "^1.5.8",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/jest": "^26.0.13",
        "@types/node": "^14.10.1",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-redux": "^7.1.11",
        "@types/react-router-dom": "^5.1.6",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "electron": "^11.0.3",
        "electron-builder": "^22.9.1",
        "eslint": "^7.14.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-airbnb-typescript": "^12.0.0",
        "eslint-plugin-react": "^7.19.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "typescript": "^4.1.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged --allow-empty",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx,jsx}": [
            "eslint --fix"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "build": {
        "extends": null,
        "files": [
            "package.json",
            "build/**"
        ]
    }
}
